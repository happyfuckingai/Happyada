# Google AI API Key (Required for Gemini LLM and TTS)
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"

# Google Maps API Key (Optional, for travel duration functionality)
# MAPS_API_KEY="YOUR_MAPS_API_KEY"

# Gemini LLM Configuration
# Model to be used for language understanding and generation
# Example: "gemini-1.5-flash-latest", "gemini-2.0-flash-live-001"
GEMINI_LLM_MODEL="gemini-1.5-flash-latest"

# Gemini TTS Configuration
# TTS Model to be used for speech synthesis
# Example: "gemini-1.5-flash-preview-tts", "gemini-2.5-flash-preview-tts" (refer to Google AI documentation for available models)
GEMINI_TTS_MODEL="gemini-1.5-flash-preview-tts"

# Voice to be used for TTS.
# Refer to Google AI documentation for available voice names (e.g., "Kore", "Puck", "echo", "zephyr")
GEMINI_TTS_VOICE="echo"

# Flask Secret Key (Optional, for web app security if using Flask features that require it)
# FLASK_SECRET_KEY="YOUR_FLASK_SECRET_KEY"

# React App Port (Optional, for development if running client separately)
# REACT_APP_PORT="5173"
